<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/bg_color"
        android:orientation="vertical"
        tools:context=".login.PhoneLoginActivity">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:fontFamily="@font/bold"
            android:text="Verify Your Number"
            android:textAlignment="center"
            android:textColor="#EBAD21"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/regular"
            android:padding="10dp"
            android:text="Please enter your mobile number.You will receive a SMS which includes a verification code."
            android:textAlignment="center"
            android:textColor="#C78B03" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp">


            <EditText
                android:id="@+id/etCountryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/regular"
                android:hint="CC"
                android:background="@drawable/edit_text_shape"
                android:inputType="phone"
                android:letterSpacing="0.1"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="#C6C3C3"
                android:textSize="20dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="#EBAD21"
                android:padding="5dp" />

            <EditText
                android:id="@+id/etPhNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/regular"
                android:hint="Phone Number"
                android:imeActionId="6"
                android:background="@drawable/edit_text_shape"
                android:imeActionLabel="Send"
                android:imeOptions="actionUnspecified"
                android:inputType="phone"
                android:letterSpacing="0.1"
                android:maxLength="10"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#C6C3C3"
                android:textSize="20dp" />

        </LinearLayout>


        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:text="NEXT"
            android:textColor="@color/black" />


    </LinearLayout>

</layout>
